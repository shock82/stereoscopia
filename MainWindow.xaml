<Window
    x:Class="Stereoscopia.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Stereoscopia"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="36"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Immagine 1" VerticalAlignment="Center"/>
        <TextBox x:Name="txbImg1" IsReadOnly="True" Grid.Column="1" Height="26"/>
        <Button x:Name="btnImg1" Content="..." Click="btnImg1_Click" Grid.Column="2" Height="26"/>
        
        <Label Content="Immagine 2" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="txbImg2" IsReadOnly="True" Grid.Row="1" Grid.Column="1" Height="26"/>
        <Button x:Name="btnImg2" Content="..." Click="btnImg2_Click" Grid.Row="1" Grid.Column="2" Height="26"/>

        <Button x:Name="start" Content="Avvia" Click="start_Click" Grid.Row="2" Grid.Column="1" Width="80" Height="26"/>


    </Grid>
</Window>
